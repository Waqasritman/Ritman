<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="VerCodeEditText">
    <attr name="figures" format="integer" />
    <attr name="verCodeMargin" format="dimension" />
    <attr name="bottomLineSelectedColor" format="reference" />
    <attr name="bottomLineNormalColor" format="reference" />
    <attr name="bottomLineHeight" format="dimension" />
    <attr name="selectedBackgroundColor" format="reference" />
  </declare-styleable>

  <declare-styleable name="CustomCircularProgressView">
    <attr name="cpv_progress" format="float"/>
    <attr name="cpv_maxProgress" format="float"/>
    <attr name="cpv_animDuration" format="integer"/>
    <attr name="cpv_animSwoopDuration" format="integer"/>
    <attr name="cpv_animSyncDuration" format="integer"/>
    <attr name="cpv_color" format="color"/>
    <attr name="cpv_thickness" format="dimension"/>
    <attr name="cpv_indeterminate" format="boolean"/>
    <attr name="cpv_animAutostart" format="boolean"/>
    <attr name="cpv_animSteps" format="integer"/>
    <attr name="cpv_startAngle" format="float"/>
  </declare-styleable>

  <declare-styleable name="ScannerOverlay">
    <attr name="square_width" format="integer" />
    <attr name="square_height" format="integer" />
    <attr name="line_color" format="color" />
    <attr name="line_width" format="integer" />
    <attr name="line_speed" format="integer" />
  </declare-styleable>

  <declare-styleable name="BarcodeReaderFragment">
    <attr name="auto_focus" format="boolean" />
    <attr name="use_flash" format="boolean" />
  </declare-styleable>

  <attr name="drawableCenter" format="reference" />
  <declare-styleable name="CenterDrawableButton">
    <attr name="drawableCenter" />
  </declare-styleable>
</resources>