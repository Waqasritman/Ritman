<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="PersonalLoanCalendarTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/posBlue</item>
        <item name="android:colorControlActivated">@color/posBlue</item>

    </style>

    <style name="InsuranceRegistrationCalendarTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/posGreen</item>
        <item name="android:colorControlActivated">@color/posGreen</item>

    </style>

    <style name="Text14spMedium" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TitleStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="fontFamily">@font/lato_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/background_beneficiary_registeration</item>
    </style>

    <style name="SpinnerStyle" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="fontFamily">@font/lato_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/background_beneficiary_registeration</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
       <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/background_button</item>
    </style>


    <style name="Text16spSemiBold" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>


    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.WindowLeftRight</item>
        <item name="android:windowBackground">@android:color/transparent</item>


    </style>

    <style name="AppTheme.NoActionBar" />

    <style name="AppTheme.NoActionBar.FullScreenDialog">
        <item name="android:windowAnimationStyle">@style/Animation.WindowLeftRight</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="AppTheme.NoActionBar.FullScreenDialogUpDownAnimation">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Animation.WindowUpDown" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="Animation.WindowLeftRight" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>


    <style name="title">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="buttonbig2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="buttonfull">
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="message">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="btn1">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="chbx1">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorLabel</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
        <item name="cornerSizeTopLeft">50%</item>
    </style>

    <style name="ShapeAppearanceOverlayExtendedCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>

    </style>


    <style name="lblTitleLight">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorLabel</item>
    </style>

    <style name="textStyl">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/colorLabel</item>
    </style>

    <dimen name="_11sdp">11</dimen>

</resources>