<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
  <!-- Customize your theme here. -->
  <item name="colorPrimary">@color/colorWhite</item>
  <item name="colorPrimaryDark">@color/colorTransparent</item>
  <item name="colorAccent">@color/colorGreen</item>
</style>

    <style name="PersonalLoanCalendarTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/posBlue</item>
        <item name="android:colorControlActivated">@color/posBlue</item>

    </style>

    <style name="InsuranceRegistrationCalendarTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/posGreen</item>
        <item name="android:colorControlActivated">@color/posGreen</item>

    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.WindowLeftRight</item>
        <item name="android:windowBackground">@android:color/transparent</item>


    </style>
    <style name="AppTheme.NoActionBar" />

    <style name="AppTheme.NoActionBar.FullScreenDialog">
        <item name="android:windowAnimationStyle">@style/Animation.WindowLeftRight</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="AppTheme.NoActionBar.FullScreenDialogUpDownAnimation">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Animation.WindowUpDown" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="Animation.WindowLeftRight" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

</resources>