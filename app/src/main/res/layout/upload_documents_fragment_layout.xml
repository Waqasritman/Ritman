<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/image_view"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_12sdp"
                android:fontFamily="@font/lato_semibold"
                android:text="@string/verify_documentation1"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/image_view"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_12sdp"
                android:fontFamily="@font/lato_semibold"
                android:text="Application No."
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/appno"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@id/image_view"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/background_customer_registeration"
                android:fontFamily="@font/lato_semibold"

                android:text=""
                android:hint="123456"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">



                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_200dp"
                    android:layout_above="@id/layout"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:padding="@dimen/_8sdp"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/background_customer_registeration"
                    android:layout_marginBottom="@dimen/margin_30dp" />


                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_above="@id/upload_image"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/background_select_mood"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/selfiImg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_camera"
                        android:drawableTint="@color/colorPrimary"
                        android:background="@drawable/background_customer_registeration"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:padding="@dimen/margin_25dp"
                        android:text="@string/open_camera" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/documentImg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_photo"
                        android:drawableTint="@color/colorPrimary"
                        android:background="@drawable/background_customer_registeration"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:padding="@dimen/margin_25dp"
                        android:text="@string/choose_from_gallery" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">



                <ImageView
                    android:id="@+id/image_view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_200dp"
                    android:layout_above="@id/layout"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:background="@drawable/background_customer_registeration"
                    android:layout_marginBottom="@dimen/margin_30dp" />


                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_above="@id/upload_image"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/background_select_mood"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/selfiImg1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_camera"
                        android:drawableTint="@color/colorPrimary"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:background="@drawable/background_customer_registeration"
                        android:gravity="center"
                        android:padding="@dimen/margin_25dp"
                        android:text="@string/open_camera" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/documentImg1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_photo"
                        android:drawableTint="@color/colorPrimary"
                        android:background="@drawable/background_customer_registeration"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:padding="@dimen/margin_25dp"
                        android:text="@string/choose_from_gallery" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">



                <ImageView
                    android:id="@+id/image_view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_200dp"
                    android:layout_above="@id/layout"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/background_customer_registeration"
                    android:layout_marginBottom="@dimen/margin_30dp" />


                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_above="@id/upload_image"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/background_select_mood"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/selfiImg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_camera"
                        android:drawableTint="@color/colorPrimary"
                        android:background="@drawable/background_customer_registeration"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:padding="@dimen/margin_25dp"
                        android:text="@string/open_camera" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/documentImg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_photo"
                        android:drawableTint="@color/colorPrimary"
                        android:background="@drawable/background_customer_registeration"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:padding="@dimen/margin_25dp"
                        android:text="@string/choose_from_gallery" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/upload_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:layout_marginBottom="@dimen/margin_30dp"
                android:background="@drawable/background_button"
                android:fontFamily="@font/lato_semibold"
                android:text="@string/upload"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18sp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
</layout>