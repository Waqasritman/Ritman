<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/query_transcation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/background_select_mood"
                android:drawableEnd="@drawable/mdtp_ic_chevron_right_black_24dp"
                android:gravity="center_vertical"
                android:padding="@dimen/_10sdp"
                android:text="Query Transaction"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/staus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:background="@drawable/background_select_mood"
                android:drawableEnd="@drawable/mdtp_ic_chevron_right_black_24dp"
                android:gravity="center_vertical"
                android:padding="@dimen/_10sdp"
                android:text="Check complaint staus"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:background="@drawable/background_select_mood"
                android:drawableEnd="@drawable/mdtp_ic_chevron_right_black_24dp"
                android:gravity="center_vertical"
                android:padding="@dimen/_10sdp"
                android:text="Complaint history"
                android:textColor="@color/black" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</layout>