<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:background="@drawable/round_corners"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/corners_10dp"
        app:cardElevation="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lato_bold"
                android:text="@string/bank_details_txt"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_15sp" />


            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/line_space_5dp"
                android:text="@string/bank_depost_message"
                android:textColor="@color/black" />


            <LinearLayout
                android:id="@+id/bank_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:layout_marginTop="@dimen/margin_15dp"
                android:background="@drawable/dash_border_drawable"
                android:orientation="vertical"
                android:padding="@dimen/margin_20dp"
                android:visibility="visible">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/refer_no"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/reference_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />





                <LinearLayout
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:id="@+id/simple_bank_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/bank_account_title_txt"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_12sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/toti_pay_limited_txt"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/sort_code"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_12sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/sort_code_number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/account_number"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_12sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/toti_account_no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/yemen_bank_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="عبر شرك الناصر   / ريال  -  دولار"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="اسم الحساب / شركة توتي باي"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_12sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="رقم الحساب"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />


                <TextView
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="1223013"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />
                <View
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@color/colorDarkGray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="عبر شركة الكريمي  بالريال اليمني فقط"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_12sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="اسم لحساب / فكري"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="رقم الحساب"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_12sp" />
                <TextView
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="929116"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_detail_layout"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <Button
                    android:id="@+id/yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_btn"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/okay"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_14sp" />


            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</layout>