<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">


        <include
            android:id="@+id/inculde_layout"
            layout="@layout/app_bar_new_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/down_layout"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorWhite"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="@dimen/_220sdp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:fillViewport="true"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/main_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_logo" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:id="@+id/change_pin"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10dp">


                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_change_pin"
                                app:tint="@color/colorBlack" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_10dp"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="center_vertical"
                                android:text="@string/change_pin"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ledger_history"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10dp">


                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_history_icon_home"
                                app:tint="@color/colorBlack" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_10dp"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="center_vertical"
                                android:text="@string/ledger_history_txt"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/customer_transaction_history"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10dp">


                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_history_icon_home"
                                app:tint="@color/colorBlack" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_10dp"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="center_vertical"
                                android:text="@string/customer_histroy"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="visible"
                            android:id="@+id/edit_beneficiary_list"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10dp">


                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/my_bene_icon"
                                app:tint="@color/colorBlack" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_10dp"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="center_vertical"
                                android:text="@string/edit_bene_txt"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/customer_service"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10dp">


                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_history_icon_home"
                                app:tint="@color/colorBlack" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_10dp"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="center_vertical"
                                android:text="@string/customer_ser_txt"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/banks"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10dp">


                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_bank"
                                app:tint="@color/colorBlack" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_10dp"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="center_vertical"
                                android:text="@string/funding_banks"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/settings"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10dp">


                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_baseline_settings_24"
                                app:tint="@color/colorBlack" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_10dp"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="center_vertical"
                                android:text="@string/settings"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/logout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_forward"
                                app:tint="@color/colorBlack" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_10dp"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="center_vertical"
                                android:text="@string/logout_txt"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/version_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/main_layout"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/margin_20dp"
                        android:layout_marginBottom="@dimen/margin_20dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="bottom"
                        android:textSize="@dimen/text_size_12sp" />


                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>


    </androidx.drawerlayout.widget.DrawerLayout>
</layout>