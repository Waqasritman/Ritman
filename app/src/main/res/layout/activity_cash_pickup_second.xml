<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_bar"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_semibold"
                    android:text="@string/send_money_via_cash"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />

                <TextView
                    android:id="@+id/local_city_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/city" />

                <EditText
                    android:id="@+id/city_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_select_mood"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                    android:fontFamily="@font/lato_medium"
                    android:hint="@string/city_hint"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/agents_for_cash_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/availiable_agents" />

                <TextView
                    android:id="@+id/agents_for_cash"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_select_mood"
                    android:drawableRight="@drawable/dropdown_arrow"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/Please_select_agents"
                    android:paddingStart="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="@dimen/text_size_14sp" />

                <LinearLayout
                    android:id="@+id/yemen_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/select_city" />

                    <TextView
                        android:id="@+id/yemen_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/background_select_mood"
                        android:drawableEnd="@drawable/dropdown_arrow"
                        android:gravity="center_vertical"
                        android:hint="@string/select_city_txt"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/select_location" />

                    <TextView
                        android:id="@+id/yemen_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/background_select_mood"
                        android:drawableEnd="@drawable/dropdown_arrow"
                        android:gravity="center_vertical"
                        android:hint="@string/select_location_txt"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black" />


                    <LinearLayout
                        android:id="@+id/yemen_branch_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="@string/select_branch_m" />

                        <TextView
                            android:id="@+id/yemen_branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/background_select_mood"
                            android:drawableEnd="@drawable/dropdown_arrow"
                            android:gravity="center_vertical"
                            android:hint="@string/select_branch"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/next_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/background_button"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/add_beneficiary"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>