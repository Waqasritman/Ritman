<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--        android:background="#24695C1A"-->

        <LinearLayout
            android:id="@+id/cancel_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_borders_module"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_30dp"
            android:paddingEnd="@dimen/margin_30dp"
            android:paddingBottom="@dimen/height_40dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/view"
                android:layout_width="70dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_30dp"
                app:cardBackgroundColor="@color/colorBlueSkyTwo"
                app:cardCornerRadius="3dp" />

            <LinearLayout
                android:id="@+id/save_as_pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/height_40dp">


                <ImageView
                    android:layout_width="@dimen/height_40dp"
                    android:layout_height="@dimen/height_40dp"
                    android:src="@drawable/ic_save_pdf_icon" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/save_as_pdf_txt"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/send_as_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/height_40dp"
                    android:layout_height="@dimen/height_40dp"
                    android:src="@drawable/ic_image" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/save_as_image"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/send_as_whatspp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/height_40dp"
                    android:layout_height="@dimen/height_40dp"
                    android:src="@drawable/ic_whatspp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/share_with_whatspp"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/send_as_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/height_40dp"
                    android:layout_height="@dimen/height_40dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_upload" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/others_txt"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/cancel_card_view"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:scaleType="centerInside"
            android:src="@drawable/close_icon"
            android:visibility="gone" />

    </RelativeLayout>
</layout>