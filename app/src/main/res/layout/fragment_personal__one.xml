<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_relativeLayout"
        android:orientation="vertical"
        tools:context=".personal_loan.fragment.Personal_One_Fragment">
        <TextView
            android:id="@+id/txt_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_info"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fillViewport="true"
            android:layout_below="@+id/txt_personal_info"
            android:paddingBottom="@dimen/width_100dp"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/above_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                          <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pincode_text"
                            android:textSize="@dimen/text_size_14sp" />


                            <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_pincode"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:gravity="center_vertical"
                                android:hint="Pincode No."
                                android:inputType="number"
                                android:maxLength="6"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />



                           <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/addre_city"
                            android:textSize="@dimen/text_size_14sp" />


                            <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_city"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:gravity="center_vertical"
                                android:hint="City"
                                android:inputType="text"
                                android:focusable="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />



                              <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/addre_state"
                            android:textSize="@dimen/text_size_14sp" />
                            <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_state"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:gravity="center_vertical"
                                android:hint="State"
                                android:inputType="text"
                                android:focusable="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />


                         <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/accommodation"
                            android:textSize="@dimen/text_size_14sp" />

                            <TextView
                                android:singleLine="true"
                                android:id="@+id/txt_accommondation"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:drawableEnd="@drawable/dropdown_arrow"
                                android:drawableTint="@color/colorPrimary"
                                android:gravity="center_vertical"
                                android:hint="Select Accommodation"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />



                       <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/pan"
                            android:textSize="@dimen/text_size_14sp" />

                            <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_pan"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:gravity="center_vertical"
                                android:hint="PAN"
                                android:inputType="textCapCharacters"
                                android:textAllCaps="true"
                                android:maxLength="10"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />



                           <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/adhar"
                            android:textSize="@dimen/text_size_14sp" />

                            <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_adhaar"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:gravity="center_vertical"
                                android:hint="Aadhaar"
                                android:inputType="number"
                                android:maxLength="12"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/qualification"
                            android:textSize="@dimen/text_size_14sp" />

                            <TextView
                                android:singleLine="true"
                                android:id="@+id/txt_qualification"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:drawableEnd="@drawable/dropdown_arrow"
                                android:drawableTint="@color/colorPrimary"
                                android:gravity="center_vertical"
                                android:hint="Select Qualification"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />



                    </LinearLayout>



                </LinearLayout>


            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/personal_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:background="@drawable/background_button"

            android:fontFamily="@font/lato_bold"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp" />
    </RelativeLayout>

</layout>