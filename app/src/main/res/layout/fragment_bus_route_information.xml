<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_15dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/booking_det_txt"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_22sp" />


        <TextView
            android:id="@+id/selected_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/route_txt"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_14sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginBottom="@dimen/margin_15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardMaxElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_source"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/booking_from_txt"
                    android:paddingStart="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/colorSpinner" />

                <TextView
                    android:id="@+id/select_destination"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/booing_to_txt"
                    android:paddingStart="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/find_bus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:background="@drawable/background_select_mood"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/view_seats_txt"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>
</layout>