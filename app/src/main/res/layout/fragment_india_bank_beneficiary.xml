<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/page_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_semibold"
                    android:text="@string/enter_ifsc_code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />


                <LinearLayout
                    android:id="@+id/ifsc_layout_india"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ifsc_code"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:singleLine="true"
                        android:id="@+id/isfs_code_india"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_beneficiary_registeration"
                        android:hint="IFSC Code/IBAN No"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/text_size_16sp"
                        android:textColor="@color/black" />


                     <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bank_name_txt"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:singleLine="true"
                        android:id="@+id/india_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_beneficiary_registeration"
                        android:gravity="center_vertical"
                        android:hint="Bank name"
                        android:textSize="@dimen/text_size_16sp"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/branch_name_txt"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:singleLine="true"
                        android:id="@+id/branch_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_beneficiary_registeration"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_16sp"
                        android:hint="@string/branch_name_txt"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black" />




                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/search_bank"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/gradient_btn"

                        android:padding="@dimen/_3sdp"
                        android:text="@string/search_bank"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:text="@string/enter_account_no"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:id="@+id/account_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_beneficiary_registeration"
                        android:hint="345612213"
                        android:textSize="@dimen/text_size_16sp"
                        android:inputType="numberPassword"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:text="@string/re_enter_account_no_m"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:id="@+id/re_enter_account_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_beneficiary_registeration"
                        android:hint="@string/account_no_hint"
                        android:inputType="number"
                        android:textSize="@dimen/text_size_16sp"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black" />


                    <LinearLayout
                        android:id="@+id/next_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/gradient_btn"

                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:padding="@dimen/_3sdp"
                            android:text="@string/add_beneficiary"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>