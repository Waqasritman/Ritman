<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_provider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/background_select_mood"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:text="@string/searc_provider" />

            <TextView
                android:id="@+id/first_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/background_select_mood"
                android:drawableRight="@drawable/next_arrow"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="start|center"
                android:padding="@dimen/_10sdp"
                android:text="Electricity Provider 1" />

            <TextView
                android:id="@+id/second_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/background_select_mood"
                android:drawableRight="@drawable/next_arrow"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="start|center"
                android:padding="@dimen/_10sdp"
                android:text="Electricity Provider 2" />

            <TextView
                android:id="@+id/third_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/background_select_mood"
                android:drawableRight="@drawable/next_arrow"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="start|center"
                android:padding="@dimen/_10sdp"
                android:text="Electricity Provider 3" />


        </LinearLayout>
    </RelativeLayout>
</layout>