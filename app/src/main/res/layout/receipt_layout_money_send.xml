<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar" />


        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false"
            android:paddingBottom="@dimen/margin_60dp"
            android:id="@+id/pdf_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:fillViewport="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:layout_marginStart="-15dp"
                    android:layout_width="250dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_logo" />


                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"
                    android:elevation="2dp"
                    app:cardCornerRadius="@dimen/margin_5dp"
                    app:cardMaxElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_medium"
                            android:text="@string/transaction_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:text="@string/txn_number"
                                android:textSize="@dimen/text_size_12sp" />

                            <TextView
                                android:id="@+id/txn_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:paddingStart="@dimen/margin_10dp"
                                android:paddingEnd="0dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:text="@string/date_amp_time"
                                android:textSize="@dimen/text_size_12sp" />

                            <TextView
                                android:id="@+id/txn_date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:paddingStart="@dimen/margin_10dp"
                                android:paddingEnd="0dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/customer___"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:maxWidth="@dimen/width_100dp"
                                android:text="@string/address_txt"
                                android:textSize="@dimen/text_size_12sp" />

                            <TextView
                                android:id="@+id/customer_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_toEndOf="@id/customer___"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="end"
                                android:paddingStart="@dimen/margin_10dp"
                                android:paddingEnd="0dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"
                    android:elevation="2dp"
                    app:cardCornerRadius="@dimen/margin_5dp"
                    app:cardMaxElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_medium"
                            android:text="@string/payment_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:text="@string/receiving_amount"
                                android:textSize="@dimen/text_size_12sp" />

                            <TextView
                                android:id="@+id/receiving_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:paddingStart="@dimen/margin_10dp"
                                android:paddingEnd="0dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"
                    android:elevation="2dp"
                    app:cardCornerRadius="@dimen/margin_5dp"
                    app:cardMaxElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_medium"
                            android:text="@string/customer_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:text="@string/mobile_number_txt"
                                android:textSize="@dimen/text_size_12sp" />

                            <TextView
                                android:id="@+id/mobile_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:paddingStart="@dimen/margin_10dp"
                                android:paddingEnd="0dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bank_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"
                    android:elevation="2dp"
                    app:cardCornerRadius="@dimen/margin_5dp"
                    app:cardMaxElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_medium"
                            android:text="@string/bank_details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:text="@string/account_no_txt_t"
                                android:textSize="@dimen/text_size_12sp" />

                            <TextView
                                android:id="@+id/account_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:paddingStart="@dimen/margin_10dp"
                                android:paddingEnd="0dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:text="@string/bene_name"
                                android:textSize="@dimen/text_size_12sp" />

                            <TextView
                                android:id="@+id/bene_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:paddingStart="@dimen/margin_10dp"
                                android:paddingEnd="0dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:text="@string/bank_name_txt"
                                android:textSize="@dimen/text_size_12sp" />

                            <TextView
                                android:id="@+id/bank_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:paddingStart="@dimen/margin_10dp"
                                android:paddingEnd="0dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:text="@string/bank_code"
                                android:textSize="@dimen/text_size_12sp" />

                            <TextView
                                android:id="@+id/bank_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:paddingStart="@dimen/margin_10dp"
                                android:paddingEnd="0dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:text="@string/payoutagentname"
                                android:textSize="@dimen/text_size_12sp" />

                            <TextView
                                android:id="@+id/payoutagent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_medium"
                                android:gravity="start"
                                android:paddingStart="@dimen/margin_10dp"
                                android:paddingEnd="0dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_20dp"
            android:backgroundTint="@color/posOrange"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_baseline_share_24" />


    </RelativeLayout>
</layout>
