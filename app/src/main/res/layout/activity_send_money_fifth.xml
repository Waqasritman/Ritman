<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendMoney.SendMoneyFifthActivity">
<include layout="@layout/tool_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tool_bar"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_moeny_to_wallet"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/lato_semibold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="vertical"
            android:background="@drawable/background_select_mood"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INDIA"

                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Wallets in India"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_select_mood"
            android:text="Google Pay"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_gpau"
            android:drawableRight="@drawable/arrow_menu"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_select_mood"
            android:text="Paytm"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_paytm"
            android:drawableRight="@drawable/arrow_menu"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:id="@+id/paytm_tv"
            android:layout_marginTop="@dimen/_10sdp"/>
    </LinearLayout>
</RelativeLayout>