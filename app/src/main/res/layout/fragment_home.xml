<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <angoothape.wallet.utils.OnlyVerticalSwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/home_bg_image"
                android:backgroundTint="#332D78" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top_layout"
                android:layout_marginTop="-150dp"
                android:background="@color/white"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backgtound_round_up"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/money_transfer"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/width_100dp"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_money_transfer_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/DMT_txt"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/aeps"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_money_transfer_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/aeps"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/transactionHistory_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_cash_out_payment_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/transaction_history_break"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/refund"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            android:visibility="visible"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_cash_out_payment_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/refund_txt"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/bill_payment_carview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/bbps_mnemonic_logo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/biller_name_home"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/mobile_top_up_carview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:elevation="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_cash_out_payment_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/mobile_top_up_home"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/pl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_money_transfer_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/pl"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/pancard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            android:visibility="visible"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_cash_out_payment_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/pancard"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/insurance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_money_transfer_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/insurance"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">



                        <androidx.cardview.widget.CardView
                            android:id="@+id/upload_cash_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_cash_out_payment_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/upload_cash_details"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_9sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/fund_transfer_to_merchant"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_cash_out_payment_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/transfer_to_merchant"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ledger_history"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_cash_out_payment_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/ledger_history_txt_home"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ekyc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_7dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/width_100dp"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_cash_out_payment_icon"
                                    app:tint="@color/colorWhite" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:gravity="center"
                                    android:text="@string/eKYC"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </LinearLayout>


            </androidx.core.widget.NestedScrollView>

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="start"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_25dp"
                    android:src="@drawable/home_logo"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/curr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/icon"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="@dimen/margin_15dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="Available balance"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:textSize="@dimen/text_size_22sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_balance"
                    android:layout_marginEnd="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_below="@id/curr"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/lato_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>


        </RelativeLayout>

    </angoothape.wallet.utils.OnlyVerticalSwipeRefreshLayout>
</layout>