<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_semibold"
                android:text="Query Transaction"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_22sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/lato_medium"
                android:lineSpacingExtra="5dp"
                android:text="You can verify the status of your online Transaction by entering your mobile number or transaction ref.id"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_14sp" />


            <TextView
                style="@style/TitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:text="Enter Mobile no" />

            <EditText
                android:id="@+id/seach_bene"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:hint="@string/phone_number_hint"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="@dimen/margin_10dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/issuance_country_title"
                style="@style/TitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/select_from_date" />

            <TextView
                android:id="@+id/issuance_country"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_calendar"
                android:gravity="center_vertical"
                android:hint="DD/MM/YYYY"
                android:padding="@dimen/_10sdp" />


            <TextView
                style="@style/TitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/select_to_date" />

            <TextView
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_calendar"
                android:gravity="center_vertical"
                android:hint="DD/MM/YYYY"
                android:padding="@dimen/_10sdp" />


            <TextView
                style="@style/TitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="@dimen/margin_25dp"
                android:text="Or"
                android:textSize="@dimen/text_size_22sp" />


            <TextView
                style="@style/TitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:text="Enter Transaction ref.id" />

            <EditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:hint="@string/phone_number_hint"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="@dimen/margin_10dp"
                android:singleLine="true" />


            <androidx.appcompat.widget.AppCompatButton
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25dp"
                android:text="Submit"
                android:textAllCaps="false" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</layout>