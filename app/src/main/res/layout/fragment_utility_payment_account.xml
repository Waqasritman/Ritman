<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/main_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_semibold"
                    android:text="@string/please_enter_be"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <LinearLayout
                    android:id="@+id/colops_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp">

                        <ImageView
                            android:id="@+id/img_billername_logo"
                            android:layout_width="@dimen/margin_60dp"
                            android:layout_height="@dimen/margin_60dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/margin_10dp"
                            android:layout_marginEnd="@dimen/margin_10dp"
                            android:src="@drawable/bbps_biller_name"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/img_bbps"
                            android:layout_width="@dimen/margin_60dp"
                            android:layout_height="@dimen/margin_60dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/margin_10dp"
                            android:layout_marginEnd="@dimen/margin_10dp"
                            android:src="@drawable/bbps_horizontal_1"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/account_no_field"
                        style="@style/TitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp" />

                    <EditText
                        android:id="@+id/account_no"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:background="@drawable/background_select_mood"
                        android:hint="@string/account_no_hint"
                        android:padding="@dimen/margin_10dp" />


                    <TextView
                        android:id="@+id/account_policy_no_field"
                        style="@style/TitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/account_policy_no"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:hint="@string/account_no_hint"
                        android:padding="@dimen/margin_10dp" />


                    <TextView
                        android:id="@+id/description_field"
                        style="@style/TitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/re_enter_account_policy"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:hint="@string/account_no_hint"
                        android:padding="@dimen/margin_10dp" />

                    <TextView
                        android:id="@+id/size_four_title"
                        style="@style/TitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/size_four_title_input"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:hint="@string/account_no_hint"
                        android:padding="@dimen/margin_10dp" />

                    <LinearLayout
                        android:id="@+id/linear_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt_payment_amount"
                            style="@style/TitleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Amount" />

                        <EditText
                            android:id="@+id/edt_payment_amount"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:hint="Enter your amount"
                            android:inputType="number"
                            android:padding="@dimen/margin_10dp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_mobileno"
                        style="@style/TitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Mobile Number*" />

                    <EditText
                        android:id="@+id/mobileno"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:hint="Enter your mobile number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="@dimen/margin_10dp" />

                    <TextView
                        android:id="@+id/fieldName"
                        style="@style/TitleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

                <Button
                    android:id="@+id/next_layout"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:layout_marginBottom="@dimen/margin_30dp"
                    android:text="@string/next" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:visibility="gone" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>