<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/lato_semibold"
                    android:text="@string/how_would_you_like"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />



                <LinearLayout
                    android:id="@+id/bank_transfer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/background_select_mood"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp"
                    android:weightSum="3.5">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="3"
                        android:drawableStart="@drawable/ic_bank"
                        android:drawableTint="@color/white"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start|center_vertical"
                        android:text="@string/DMT_txt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:tint="@color/white"
                        android:src="@drawable/arrow_menu" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cash_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/background_select_mood"
                    android:gravity="center"
                    android:backgroundTint="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp"
                    android:weightSum="3.5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="3"
                        android:drawableStart="@drawable/ic_money"
                        android:drawableTint="@color/white"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start|center_vertical"
                        android:text="@string/verify_bene_txt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:tint="@color/white"
                        android:src="@drawable/arrow_menu" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/door_to_door_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/background_select_mood"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp"
                    android:visibility="gone"
                    android:weightSum="3.5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="3"
                        android:drawableStart="@drawable/ic_door"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center_vertical"
                        android:text="Door to Door"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/arrow_menu" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/local_transfer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/background_select_mood"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:weightSum="3.5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="3"
                        android:drawableStart="@drawable/ic_transfer"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Local Transfer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/arrow_menu" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/internatinal_transfer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/background_select_mood"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:weightSum="3.5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="3"
                        android:drawableStart="@drawable/ic_global"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="International Transfer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/arrow_menu" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/request_money_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_12sdp"
            android:background="@drawable/background_colour_border"
            android:fontFamily="@font/lato_regular"
            android:text="Request Money"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />
    </RelativeLayout>
</layout>