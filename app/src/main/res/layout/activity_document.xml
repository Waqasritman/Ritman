<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KYC.DocumentActivity">
<include layout="@layout/tool_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_below="@+id/tool_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please upload your lqama card"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front View"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/background_select_mood"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/capture_layout"
                android:visibility="visible">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Open Camera"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"
                    android:drawableTop="@drawable/ic_camera"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:id="@+id/capture_img_tv"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_margin="@dimen/_5sdp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Choose from gallery"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"
                    android:drawableTop="@drawable/ic_camera"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_2sdp"
                   android:id="@+id/capture_gallery_tv"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/background_select_mood"
            android:orientation="horizontal"
            android:id="@+id/capture_image_layout"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:src="@drawable/image5"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/_10sdp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_icon"
                android:backgroundTint="@android:color/transparent"
                android:layout_gravity="end"
                />

        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back View"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/background_select_mood"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Open Camera"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"
                    android:drawableTop="@drawable/ic_camera"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_2sdp"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_margin="@dimen/_5sdp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Choose from gallery"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"
                    android:drawableTop="@drawable/ic_camera"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_2sdp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/background_button"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_regular"
        android:id="@+id/confirm_btn"/>
</RelativeLayout>