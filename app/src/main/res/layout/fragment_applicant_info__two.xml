<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_relativeLayout"
        android:orientation="vertical"
        tools:context=".personal_loan.fragment.ApplicantInfo_Two_Fragment">

        <TextView
            android:id="@+id/txt_applicant_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/applicant_info"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txt_applicant_info"
            android:layout_marginTop="10dp"
            android:fillViewport="true"
            android:paddingBottom="@dimen/width_100dp"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/above_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/office_address_2"
                            android:textSize="@dimen/text_size_14sp" />
                            <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_office_address_2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:gravity="center_vertical"
                                android:hint="Office Address 2"
                                android:inputType="text"
                                android:maxLength="512"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/landmark_office"
                            android:textSize="@dimen/text_size_14sp" />
                            <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_landmark_office"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:gravity="center_vertical"
                                android:hint="Land Mark"
                                android:inputType="text"
                                android:maxLength="25"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/office_pincode"
                            android:textSize="@dimen/text_size_14sp" />
                            <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_office_pincode"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:gravity="center_vertical"
                                android:hint="Office Pincode"
                                android:inputType="number"
                                android:maxLength="6"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />


                       <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/office_city"
                            android:textSize="@dimen/text_size_14sp" />

                            <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_office_city"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:gravity="center_vertical"
                                android:hint="Office City"
                                android:inputType="text"
                                android:focusable="false"
                                android:maxLength="25"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/office_state"
                            android:textSize="@dimen/text_size_14sp" />

                            <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_office_state"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:gravity="center_vertical"
                                android:hint="Office State"
                                android:inputType="text"
                                android:maxLength="25"
                                android:focusable="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/working_since"
                            android:textSize="@dimen/text_size_14sp" />

                        <EditText
                                android:singleLine="true"
                                android:id="@+id/edt_working_since"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:gravity="center_vertical"
                                android:hint="Working Since"
                                android:inputType="number"
                                 android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/employment_type"
                            android:textSize="@dimen/text_size_14sp" />

                            <TextView
                                android:singleLine="true"
                                android:id="@+id/txt_employment_type"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_50dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:background="@drawable/background_beneficiary_registeration"
                                android:drawableEnd="@drawable/dropdown_arrow"
                                android:gravity="center_vertical"
                                android:hint="Select employment type"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size_16sp" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/personal_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/lato_bold"

            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp" />
    </RelativeLayout>

</layout>