<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:background="@drawable/round_corners"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/corners_10dp"
        app:cardElevation="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lato_bold"
                android:text="@string/canceldet_txt"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_15sp" />


            <LinearLayout
                android:id="@+id/return_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/margin_15dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="start"
                    android:text="@string/return_amount_txt"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/return_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cancel_layot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/return_layout"
                android:layout_marginTop="@dimen/margin_15dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="start"
                    android:text="@string/cancel_txt"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/cancel_amountl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cancel_layot"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:orientation="vertical"
                android:weightSum="2">


                <Button
                    android:id="@+id/yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_btn"

                    android:fontFamily="@font/lato_bold"
                    android:text="@string/okay"

                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_14sp" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gradient_with_border"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/cancel"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_14sp" />


            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</layout>