<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="10">

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/language_spinner"
                android:layout_width="@dimen/height_150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/margin_25dp"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="@string/english_txt"
                android:padding="@dimen/margin_10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14.5sp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="8dp"
                app:spinner_arrow_tint="@color/black"
                app:spinner_divider_color="@color/black"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_item_array="@array/languages"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@color/white"
                app:spinner_popup_elevation="14dp" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image8"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="8.5"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo"
                android:visibility="visible" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/textOffer"
                android:textSize="@dimen/text_18sp" />

            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_30dp"
                android:background="@drawable/underline_black"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:text="@string/check_rates"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:visibility="invisible" />


            <Button
                android:id="@+id/buttonCreate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:background="@drawable/gradient_btn"
                android:fontFamily="@font/lato_medium"
                android:text="@string/create"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18sp" />

            <Button
                android:id="@+id/already"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:background="@drawable/gradient_btn"
                android:fontFamily="@font/lato_medium"
                android:text="@string/already"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18sp" />

        </LinearLayout>


    </LinearLayout>
</layout>