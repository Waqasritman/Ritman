<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/margin_5dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_15dp">


            <TextView

                android:id="@+id/seat_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/montserrat_medium"
                android:text="Seat No:"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16sp" />


            <TextView
                android:id="@+id/seat_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_toEndOf="@id/seat_txt"
                android:fontFamily="@font/montserrat_semibold"
                android:text="3L"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16sp" />

            <EditText
                android:id="@+id/passenger_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:layout_below="@id/seat_no"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/border_circle_gray"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Passenger name"
                android:paddingStart="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_14sp" />

            <EditText
                android:id="@+id/age"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45dp"
                android:layout_below="@id/passenger_name"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/border_circle_gray"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Passenger age"
                android:paddingStart="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_14sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</layout>