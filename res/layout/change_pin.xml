<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainChangePinLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <include
      layout="@layout/my_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <EditText
      android:id="@+id/oldPinEditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/_20sdp"
      android:layout_marginEnd="@dimen/_20sdp"
      android:layout_marginTop="@dimen/_20sdp"
      android:hint="@string/old_wallet_pin"
      android:inputType="numberPassword"
      android:maxLength="6"
      android:paddingLeft="@dimen/_5sdp"
      android:text=""
      android:textColor="@color/colorBlack"
      android:textSize="@dimen/_11ssp"
      app:met_baseColor="@color/colorBlack"
      app:met_floatingLabel="highlight"
      app:met_floatingLabelTextSize="@dimen/_10ssp"
      app:met_primaryColor="@color/colorGreen"
      app:met_singleLineEllipsis="false" />

  <EditText
      android:id="@+id/newPinEditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/_20sdp"
      android:layout_marginEnd="@dimen/_20sdp"
      android:layout_marginTop="@dimen/_20sdp"
      android:hint="@string/new_wallet_pin"
      android:inputType="numberPassword"
      android:maxLength="6"
      android:paddingLeft="@dimen/_5sdp"
      android:text=""
      android:textColor="@color/colorBlack"
      android:textSize="@dimen/_11ssp"
      app:met_baseColor="@color/colorBlack"
      app:met_floatingLabel="highlight"
      app:met_floatingLabelTextSize="@dimen/_10ssp"
      app:met_primaryColor="@color/colorGreen"
      app:met_singleLineEllipsis="false" />

  <EditText
      android:id="@+id/repeatPinEditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/_20sdp"
      android:layout_marginEnd="@dimen/_20sdp"
      android:layout_marginTop="@dimen/_20sdp"
      android:hint="@string/repeat_new_wallet_pin"
      android:inputType="numberPassword"
      android:maxLength="6"
      android:paddingLeft="@dimen/_5sdp"
      android:text=""
      android:textColor="@color/colorBlack"
      android:textSize="@dimen/_11ssp"
      app:met_baseColor="@color/colorBlack"
      app:met_floatingLabel="highlight"
      app:met_floatingLabelTextSize="@dimen/_10ssp"
      app:met_primaryColor="@color/colorGreen"
      app:met_singleLineEllipsis="false" />

  <TextView
      android:id="@+id/savePinTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/_25sdp"
      android:background="@drawable/yellow_btn"
      android:text="@string/save"
      style="@style/CustomButtonStyle" />
</LinearLayout>