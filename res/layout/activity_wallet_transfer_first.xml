<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoneyTransferModuleV.wallettransfer.local.WalletTransferFirstActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/tool_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you like to send the Money?"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/lato_semibold"
                android:layout_margin="@dimen/_10sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/background_select_mood"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                android:weightSum="3.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/local_transfer_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3"
                    android:text="Local Transfer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/lato_regular"
                    android:drawableLeft="@drawable/ic_transfer"
                    android:drawablePadding="@dimen/_10sdp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/arrow_menu" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/background_select_mood"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                android:weightSum="3.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/internatinal_transfer_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="3"
                    android:text="International Transfer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/lato_regular"
                    android:drawableLeft="@drawable/ic_global"
                    android:drawablePadding="@dimen/_10sdp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/arrow_menu" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
</layout>