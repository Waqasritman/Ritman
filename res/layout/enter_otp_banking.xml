<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainLinearLayoutVerification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/image3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgtound_round_up"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginEnd="20sp"
                    android:text="@string/verify_otp_txt"
                    android:textColor="@color/blakish"
                    android:textSize="20sp"
                    >

                </TextView>


                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/number_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_50dp"

                    android:layout_marginTop="@dimen/margin_10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="4">


                    <EditText
                        android:id="@+id/digit_one"
                        android:layout_width="@dimen/height_50dp"
                        android:layout_height="@dimen/height_50dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:autofillHints="@string/number"
                        android:background="@drawable/edit_text_design_gray"
                        android:gravity="center"
                        android:hint="@string/single_amount_hint"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@id/digit_two"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorLightGrey" />

                    <EditText
                        android:id="@+id/digit_two"
                        
                        android:layout_width="@dimen/height_50dp"
                        android:layout_height="@dimen/height_50dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:autofillHints="@string/number"
                        android:background="@drawable/edit_text_design_gray"
                        android:gravity="center"
                        android:hint="@string/single_amount_hint"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@id/digit_three"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorLightGrey" />

                    <EditText
                        android:id="@+id/digit_three"
                        
                        android:layout_width="@dimen/height_50dp"
                        android:layout_height="@dimen/height_50dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:autofillHints="@string/number"
                        android:background="@drawable/edit_text_design_gray"
                        android:gravity="center"
                        android:hint="@string/single_amount_hint"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@id/digit_four"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorLightGrey" />

                    <EditText
                        android:id="@+id/digit_four"
                        android:layout_width="@dimen/height_50dp"
                        android:layout_height="@dimen/height_50dp"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:autofillHints="@string/number"
                        android:background="@drawable/edit_text_design_gray"
                        android:gravity="center"
                        android:hint="@string/single_amount_hint"
                        android:imeOptions="actionPrevious"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorLightGrey" />

                  

                </LinearLayout>
                


                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="25sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginBottom="20sp"
                        android:gravity="start"
                        android:text="Didn't recieve the OTP?"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>



                    <TextView
                        android:id="@+id/resendsignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="25sp"
                        android:layout_marginEnd="20sp"
                        android:layout_marginBottom="20sp"
                        android:text="@string/resend_otp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        />


                </LinearLayout>

                <Button
                    android:id="@+id/confirmsignupotp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/margin_15dp"
                    android:background="@drawable/button_design"
                    android:text="@string/confirm_text"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_18sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>