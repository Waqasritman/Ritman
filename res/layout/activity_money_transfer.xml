<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".billpayment.fragments.MoneyTransferActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10ssp"
            android:text="@string/how_send_money"
            android:textSize="@dimen/_19sdp"
             />


        <androidx.cardview.widget.CardView
            android:id="@+id/local_transafer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80dp"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/image_local"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_transfer" />


                <TextView
                    android:id="@+id/local_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toStartOf="@id/arrow_imagelocal"
                    android:layout_toEndOf="@id/image_local"
                    android:text="@string/local_payments_txt"
                    android:textSize="@dimen/text_18sp" />


                <ImageView
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:id="@+id/arrow_imagelocal"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_menu" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/international_transafer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80dp"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_global" />


                <TextView
                    android:id="@+id/local_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toStartOf="@id/arrow_image"
                    android:layout_toEndOf="@id/image"
                    android:text="@string/inter_payments_txt"
                    android:textSize="@dimen/text_18sp" />


                <ImageView
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:id="@+id/arrow_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_menu" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>