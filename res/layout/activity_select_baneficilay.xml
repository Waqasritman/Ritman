<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CashTransfer.SelectBaneficilayActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/tool_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp"
            android:layout_below="@+id/tool_bar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Beneficiary"
                android:textSize="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_select_mood"
                android:text="Sachine Mittal \n 9876532193"
                android:textColor="@color/black"
                android:padding="@dimen/_10sdp"
                android:drawableRight="@drawable/arrow_menu"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/lato_regular"
                android:id="@+id/first_tv"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_select_mood"
                android:text="Sachine Mittal \n 9876532193"
                android:textColor="@color/black"
                android:padding="@dimen/_10sdp"
                android:drawableRight="@drawable/arrow_menu"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/lato_regular"
                android:id="@+id/second_tv"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_select_mood"
                android:text="Sachine Mittal \n 9876532193"
                android:textColor="@color/black"
                android:padding="@dimen/_10sdp"
                android:drawableRight="@drawable/arrow_menu"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/lato_regular"
                android:id="@+id/third_tv"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:text="Add Beneficiary"
        android:textColor="@color/white"
        android:padding="@dimen/_2sdp"
        android:id="@+id/send_mony_btn"/>
</RelativeLayout>