<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoneyTransferModuleV.wallettransfer.SendMoneyTypeActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_round_up_colour"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:padding="@dimen/_10sdp">
    <View
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/white"
        android:layout_margin="@dimen/_2sdp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background_green_colour"
        android:layout_margin="@dimen/_10sdp"
        android:text="Send Money"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/lato_regular"
        android:id="@+id/send_money_btn"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background_green_colour"
        android:layout_margin="@dimen/_10sdp"
        android:text="Request Money"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/lato_regular"
        android:id="@+id/request_money_btn"/>
</LinearLayout>
</RelativeLayout>
</layout>