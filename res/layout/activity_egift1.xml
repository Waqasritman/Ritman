<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/e_gift_background"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".e_gift.fragments.SendEGiftActivity">


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:srcCompat="@drawable/back_white_icon" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:text="E Gift"
        android:textSize="@dimen/_15sdp"

        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>


    <ImageView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/egift_image"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_12ssp"
        android:text="Receiver Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg_yelloe1"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_8sdp"
        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:textColor="@color/black"
        android:background="@null"
        android:hint="Anubhav"
        android:padding="@dimen/_10sdp" />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receiver Mobile Number"
        android:layout_marginStart="@dimen/_15sdp"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_10sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:weightSum="5"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_8sdp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:layout_gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:background="@drawable/round_bg_yelloe1"
            >

            <LinearLayout
                android:id="@+id/countrySpinnerSignIn"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/countryCodeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/_91"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:id="@+id/countryCodeImageView"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:contentDescription="TODO" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:contentDescription="TODO"
                    android:src="@drawable/dropdown_arrow" />
            </LinearLayout>

        </FrameLayout>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.4"
            android:minHeight="@dimen/_40sdp"
            android:background="@drawable/round_bg_yelloe1"
            android:text="9827543210"
            android:inputType="number"
            android:padding="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_8sdp"/>
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        android:id="@+id/proced_gift_pay"
        android:minHeight="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/_10sdp"

            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textColor="@android:color/holo_orange_light"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>