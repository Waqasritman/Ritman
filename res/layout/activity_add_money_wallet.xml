<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".mywalletmoduleV.fragments.AddMoneyWalletActivity">

    <TextView
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance :$20000"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/white"
        android:layout_below="@+id/tool_bar"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:id="@+id/center_layout">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_130sdp">


        <ImageView
            android:layout_margin="@dimen/_30sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/ic_send"/>


    </androidx.cardview.widget.CardView>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$2000"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:background="@android:color/transparent"/>
    <View
        android:layout_width="100dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_amount_you_want_to_load"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/white"/>

</LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/proced_pay_wallet"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_layout">

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_send"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/proceed_to_pay"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/lato_regular"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>
</layout>