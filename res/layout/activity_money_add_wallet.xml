<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".mywalletmoduleV.fragments.MoneyAddWalletActivity">


    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/_30sdp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_130sdp">


            <ImageView
                android:layout_margin="@dimen/_30sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_send"/>


        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2000 Added"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Wallet"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/white"/>





    </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Money Added to wallet"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:id="@+id/money_tv"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:fontFamily="@font/lato_semibold"
                android:background="@drawable/background_white_border"/>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"/>

</RelativeLayout>