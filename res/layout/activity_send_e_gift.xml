<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorYellow"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".e_gift.fragments.SendEGiftActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_50sdp"
            android:text="E-Gift"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />


        <ImageView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/egift_image" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="$2000"
            android:textColor="@color/white" />

        <View
            android:id="@+id/view_one"
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:layout_below="@+id/third_layout"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/white"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Enter the amount you want to gift"
            android:textColor="@color/white" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/rounded_corner_green"
            android:gravity="start"
            android:padding="@dimen/_8sdp"
            android:text="Write your personalised message"
            android:textColor="@color/black_50"
            android:textSize="@dimen/_12ssp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/proced_gift_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/proceed_to_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_send"
                    android:drawableTint="@android:color/holo_orange_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proceed To Pay"
                    android:textColor="@android:color/holo_orange_light" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>