<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WITH_CHARGESFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_margin="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:gravity="center">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/background_select_mood"
        android:text="USD"
        android:drawableLeft="@drawable/ic_flag_us"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableRight="@drawable/dropdown_arrow"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_black_arrow"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/background_select_mood"
        android:text="SAR"
        android:drawableLeft="@drawable/flag_saudi_arabia"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableRight="@drawable/dropdown_arrow"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"/>
</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/background_select_mood"
                    android:padding="@dimen/_10sdp"
                    android:text="2000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_black_arrow" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/background_select_mood"
                    android:padding="@dimen/_10sdp"
                    android:text="0123" />
            </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:gravity="start"
    android:text="@string/lock_rate"
    android:textColor="@color/colour_accent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert"
                android:background="@drawable/background_colour_border"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/lato_semibold"
                android:layout_marginTop="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/border_background">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Enter Promocode"
                    android:padding="@dimen/_5sdp"
                    android:background="@null"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/_5sdp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_select_mood"
                    android:text="Apply"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="3"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sending Amount"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="USD 20000"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/_5sdp"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Price Breakdown"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/colour_accent"
                android:layout_marginStart="@dimen/_5sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="3"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Payable"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="2"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="USD 20000"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_5sdp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Source of Income"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select the Source"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/background_select_mood"
                    android:drawableRight="@drawable/dropdown_arrow"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purpose of transfer"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select the Purpose"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/background_select_mood"
                    android:drawableRight="@drawable/dropdown_arrow"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/send_now_layout"
                android:background="@drawable/background_button">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="Send Now"
                    android:padding="@dimen/_3sdp"
                    android:drawableLeft="@drawable/ic_white_send"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>