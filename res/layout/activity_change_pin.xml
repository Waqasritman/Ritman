<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar_final"
            layout="@layout/tool_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgtound_round_up"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_15dp"
                android:paddingEnd="@dimen/margin_15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="start"
                    android:text="@string/change_pin"
                    android:textColor="@color/blakish"
                    android:textSize="@dimen/text_size_20sp" />


                <TextView
                    android:id="@+id/old_pin_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/old_pin"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp" />


                <EditText
                    android:id="@+id/old_pin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/edittext_grey"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/pinhint"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="@dimen/margin_10dp"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/new_pin"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp" />


                <EditText
                    android:id="@+id/new_pin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/edittext_grey"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/pinhint"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="@dimen/margin_10dp"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:fontFamily="@font/lato_medium"
                    android:text="@string/confirm_pin"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/text_size_15sp" />


                <EditText
                    android:id="@+id/confirm_pin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_45dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/edittext_grey"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/pinhint"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="@dimen/margin_10dp"
                    android:textSize="@dimen/text_size_14sp" />


                <Button
                    android:id="@+id/change_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/margin_15dp"

                    android:background="@drawable/button_design"
                    android:text="@string/change_pin"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_18sp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>