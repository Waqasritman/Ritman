<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mainPinVerificationLinearLayout"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <totipay.wallet.utils.SlideHolder
      android:id="@+id/slideHolderPinVerification"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <view
        class="angoothape.wallet.utils.DrawerMenu"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <include
          layout="@layout/my_header2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

      </include>

      <EditText
          android:id="@+id/pinEditTextVerifiedPinActivity"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_20sdp"
          android:layout_marginEnd="@dimen/_20sdp"
          android:layout_marginTop="@dimen/_50sdp"
          android:hint="@string/enter_pin"
          android:inputType="numberPassword"
          android:maxLength="6"
          android:paddingLeft="@dimen/_5sdp"
          android:text=""
          android:textColor="@color/colorBlack"
          android:textSize="@dimen/_11ssp"
          app:met_baseColor="@color/colorBlack"
          app:met_floatingLabel="highlight"
          app:met_floatingLabelTextSize="@dimen/_10ssp"
          app:met_primaryColor="@color/colorGreen"
          app:met_singleLineEllipsis="false" />

      <TextView
          android:id="@+id/submitTextViewVerifiedPin"
          style="@style/CustomButtonStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/_45sdp"
          android:background="@drawable/yellow_btn"
          android:text="@string/submit" />

    </LinearLayout>
  </totipay.wallet.utils.SlideHolder>
</LinearLayout>