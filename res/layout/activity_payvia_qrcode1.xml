<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".NewPayQRActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/back_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/back_btn"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTint="@color/colorWhite"
            android:padding="@dimen/_10ssp" />


        <TextView
            android:id="@+id/pay_qr_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_30dp"
            android:gravity="center"
            android:text="@string/pay_qr_code"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_20sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:padding="@dimen/margin_20dp"
            android:src="@drawable/ic_send" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="$200"
            android:shadowColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/white"
            android:background="@null"
            android:textColorHint="@color/white" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/enter_the_amount"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linear"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center_horizontal"
        android:layout_weight="1">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="@string/to_demo"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="531264645"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center"
            android:id="@+id/proceed_pay_button"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/round_bg_whit"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_send"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_12sdp"
                android:text="@string/proceed_to_pay"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>



    </LinearLayout>



</RelativeLayout>