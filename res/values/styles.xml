<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
  <!-- Customize your theme here. -->
  <item name="colorPrimary">@color/colorWhite</item>
  <item name="colorPrimaryDark">@color/colorTransparent</item>
  <item name="colorAccent">@color/colorGreen</item>
</style>

<style name="myTabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
  <item name="android:textSize">@dimen/_12ssp</item>
</style>

<style name="CustomButtonStyle">
  <item name="android:gravity">center</item>
  <item name="android:textColor">@color/colorWhite</item>
  <item name="android:textSize">@dimen/_12ssp</item>
</style>
    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorGreen</item>
    </style>


    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowBackground">@android:color/transparent</item>


    </style>
    <style name="AppTheme.NoActionBar" />

    <style name="AppTheme.NoActionBar.FullScreenDialogUpDownAnimation">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>


    </style>

</resources>